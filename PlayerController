// PlayerController.cs
using UnityEngine;

[RequireComponent(typeof(CharacterController))]
public class PlayerController : MonoBehaviour
{
    public float walkSpeed = 4f;
    public float sprintSpeed = 7f;
    public float jumpSpeed = 6f;
    public float gravity = -9.81f;
    public Transform cameraTransform;

    CharacterController cc;
    Vector3 velocity;
    bool isSprinting => Input.GetKey(KeyCode.LeftShift); // replace with mobile input

    void Start()
    {
        cc = GetComponent<CharacterController>();
        if (cameraTransform == null) cameraTransform = Camera.main.transform;
    }

    void Update()
    {
        HandleMovement();
    }

    void HandleMovement()
    {
        Vector2 input = new Vector2(Input.GetAxis("Horizontal"), Input.GetAxis("Vertical")); // mobile: joystick values
        Vector3 forward = Vector3.Scale(cameraTransform.forward, new Vector3(1,0,1)).normalized;
        Vector3 right = cameraTransform.right;

        Vector3 move = forward * input.y + right * input.x;
        move = move.normalized * (isSprinting ? sprintSpeed : walkSpeed);

        if (cc.isGrounded && velocity.y < 0) velocity.y = -2f;

        if (Input.GetButtonDown("Jump") && cc.isGrounded)
        {
            velocity.y = Mathf.Sqrt(jumpSpeed * -2f * gravity);
        }

        velocity.y += gravity * Time.deltaTime;
        cc.Move((move + new Vector3(0, velocity.y, 0)) * Time.deltaTime);
    }
}
